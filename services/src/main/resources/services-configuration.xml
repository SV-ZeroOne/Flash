<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="persistence-configuration.xml"/>

    <!-- bean definitions here -->
    <bean id="issueOrderDTOAdapterFactory" class="za.co.entelect.bootcamp.flash.services.IssueOrderDTOAdapterFactory" />
    <bean id="supplierPaymentDTOAdapterFactory" class="za.co.entelect.bootcamp.flash.services.SupplierPaymentDTOAdapterFactory" />
    <bean id="stockOrderPlacement" class="za.co.entelect.bootcamp.flash.services.StockOrderPlacement" >
        <constructor-arg index="0" ref="issueRepository"/>
        <constructor-arg index="1" ref="orderRepository"/>
        <constructor-arg index="2" ref="supplierRepository"/>
        <constructor-arg index="3" ref="supplierQuoteRepository"/>
        <constructor-arg index="4" ref="issueOrderDTOAdapterFactory"/>
        <constructor-arg index="5" ref="supplierPaymentDTOAdapterFactory"/>
    </bean>

</beans>